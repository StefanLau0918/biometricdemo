<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_window_focused="false">
        <shape>
			<!--<stroke
				android:width="1px"
				android:color="@color/divider" />--> <!-- 设置边框颜色 -->
		    <!-- 圆角 -->
		    <corners
		        android:radius="10dp"/><!-- 设置圆角半径 -->
		    <!-- 间隔 -->
		    <padding
		        android:left="2dp"
		        android:top="2dp"
		        android:right="2dp"
		        android:bottom="2dp"/><!-- 各方向的间隔 -->
		    <solid
		        android:color="@color/white"/>
		</shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
			<!--<stroke
				android:width="1px"
				android:color="@color/divider" />--> <!-- 设置边框颜色 -->
		    <!-- 圆角 -->
		    <corners
		        android:radius="10dp"/><!-- 设置圆角半径 -->
		    <!-- 间隔 -->
		    <padding
		        android:left="2dp"
		        android:top="2dp"
		        android:right="2dp"
		        android:bottom="2dp"/><!-- 各方向的间隔 -->
		    
		    <solid
		        android:color="@color/black_alpha30"/>
		</shape>
    </item>
</selector>